[server]
url = <%= @rest_url %>
path-login: <%= node[:kagent][:dashboard_app] %>/<%= node[:kagent][:dashboard][:api][:login] %>
path-register: hopsworks-ca/<%= node[:kagent][:dashboard][:api][:register] %>
path-rotate: hopsworks-ca/<%= node[:kagent][:dashboard][:api][:rotate] %>
path-heartbeat: <%= node[:kagent][:dashboard_app] %>/<%= node[:kagent][:dashboard][:api][:heartbeat] %>
path-alert: <%= node[:kagent][:dashboard_app] %>/<%= node[:kagent][:dashboard][:api][:alert] %>
username = <%= node[:kagent][:dashboard][:user] %>
password = <%= node[:kagent][:dashboard][:password] %>

[agent]
host-id = <%= @hostname %>
restport = <%= node[:kagent][:port] %>
heartbeat-interval = <%= node[:kagent][:heartbeat_interval] %>
services-file = <%= node[:kagent][:base_dir] %>/services
watch-interval = <%= node[:kagent][:watch_interval] %>
bin-dir = <%= node[:kagent][:base_dir] %>/bin
pid-file = <%= node[:kagent][:pid_file] %>
agent-log-file = <%= node[:kagent][:base_dir] %>/agent.log
csr-log-file= <%= node[:kagent][:base_dir] %>/csr.log
logging-level = <%= node[:kagent][:logging_level] %>
max-log-size = <%= node[:kagent][:max_log_size] %>
public-ip = <%= @public_ip %>
private-ip = <%= @private_ip %>
mysql-socket = <%= node[:ndb][:mysql_socket] %>
hostname = <%= @hostname %>
network-interface = <%= @network_if %>
group-name = <%= node[:kagent][:group_name] %>
hadoop-home = <%= @hops_dir %>/hadoop
certs-dir = <%= node[:kagent][:certs_dir] %>
certificate-file = <%= node[:kagent][:certs_dir] %>/pub.pem
ca-file = <%= node[:kagent][:certs_dir] %>/ca_pub.pem
key-file = <%= node[:kagent][:certs_dir] %>/priv.key
server-keystore = <%= @kstore %>
server-truststore = <%= @tstore %>
keystore-script = <%= node[:kagent][:base_dir] %>/keystore.sh
<%= @agent_password %>

