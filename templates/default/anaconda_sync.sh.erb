#!/bin/bash

set -e
# Force umask 022 as default for conda packages - See HOPSWORKS-880
umask 022

HOST=$(grep url <%= node['kagent']['etc'] %>/config.ini | sed -e 's/url[ \t]*=[ \t]*http:\/\///')

cd <%= node['conda']['dir'] %>
rm -rf anaconda*
wget "http://${HOST}/anaconda.tgz"
tar zxf anaconda.tgz
ln -s anaconda-<%= node['conda']['python'] %>-<%= node['conda']['version'] %> anaconda
chown -R <%= node['conda']['user'] %> anaconda
